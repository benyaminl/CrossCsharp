<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CrossCsharp.MainWindow"
        Width="400" Height="450"
        Title="CrossCsharp">
    <Canvas Width="300" Height="300">
    <Label Canvas.Top="25" Canvas.Left="50" Content="Longggggg Text"/>
    <TextBox Canvas.Left="0" Canvas.Top="45" Text="{Binding InputText, Mode=TwoWay}"/>
    <Button Canvas.Left="0" Canvas.Top="75" Name="btnAlert" Click="BtnAlert_Click">Print Value</Button>
    <Label Canvas.Top="100" Canvas.Left="0" Content="{Binding LabelText, Mode=OneWay}"/>
    <Button Canvas.Left="0" Name="btnHello" Click="BtnHello_Click">Hello World</Button>
    <Button Canvas.Top="80" Canvas.Left="220" Name="btnNewWindow" Click="BtnNewWindow_Click">New Window</Button> 
    <Button Canvas.Top="120" Canvas.Left="220" Name="btnNewWindowChat" Click="BtnNewWindowChat_Click">Chat Window</Button> 
    <Button Canvas.Top="150" Canvas.Left="220" Name="btnShowLogin" Click="BtnShowLogin_Click">Chat Login</Button> 
    </Canvas>
</Window>
