<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CrossCsharp.User.ChatLanding"
        Width="400" Height="150"
        Title="Login">

    <Canvas Width="350" Height="100">
    <Label Content="Username" Canvas.Left="0" Canvas.Top="0"/>
    <TextBox Canvas.Left="0" Canvas.Top="30" Name="UsernameInput" Width="300"/>
    <Button Canvas.Left="0" Canvas.Top="65" Name="btnLogin" Click="BtnLogin_Click">Login</Button>
    </Canvas>
</Window>
